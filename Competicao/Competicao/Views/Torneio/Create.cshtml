@model Competicao.Models.Torneio

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Torneio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Entre com os times</label>
                <select name="Timestags"class="form-control times-tags" multiple="multiple">

                </select>
            </div>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <input asp-for="TipoTorneio"  class="btn-check" value="Elimination" type="radio" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio1">Elimination</label>

                <input asp-for="TipoTorneio"  class="btn-check" value="Double Elimination" type="radio" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Double Elimination</label>

                <input asp-for="TipoTorneio"  class="btn-check" value="Swiss" type="radio" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio3">Swiss</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(".times-tags").select2({
            placeholder: 'Entre com os times',
            tags: true,
            "language": "pt-BR",
            "language": {
                "noResults": function () {
                    return "";
                }
            }
        });
    </script>
}
