@model Competicao.Models.Torneio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Torneio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Criacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Criacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modificacao)
        </dd>
    </dl>
    <ol class="rounded-list">
        @foreach (var person in ViewBag.Data)
        {
            foreach (var i in person.Nome)
            {
                <li><a href="">@i</a></li>
            }
        }
    </ol>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/select2/js/select2.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
